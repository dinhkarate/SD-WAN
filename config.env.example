# SD-WAN Configuration
# Copy this file to config.env and fill in your values

# ===================
# VPS Information
# ===================
VPS1_PUBLIC_IP=103.109.187.182
VPS1_WG_PORT=51820

VPS2_PUBLIC_IP=103.109.187.179
VPS2_WG_PORT=51821

# ===================
# WireGuard Networks
# ===================
# PC1 <-> WG1 tunnel
WG0_NETWORK=10.10.0.0/24
WG0_PC1_IP=10.10.0.2
WG0_WG1_IP=10.10.0.1

# WG1 <-> WG2 tunnel  
WG1_NETWORK=10.20.0.0/24
WG1_WG1_IP=10.20.0.1
WG1_WG2_IP=10.20.0.2

# ===================
# Routing
# ===================
# Path to special IP list (JSON format)
SPECIAL_IP_LIST=/etc/sdwan/special-ips.json

# Routing table IDs
RT_TABLE_SPECIAL=100
RT_TABLE_DEFAULT=200

# ===================
# API Server
# ===================
API_PORT=8080
API_TOKEN=<your-secure-token>

# ===================
# Monitoring
# ===================
ENABLE_FILE_WATCH=true
FILE_WATCH_INTERVAL=5
